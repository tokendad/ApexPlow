# Database
DATABASE_URL=postgresql://plowdispatch:plowdispatch@localhost:5432/plowdispatch

# Redis
REDIS_URL=redis://localhost:6379

# JWT secrets — generate with: openssl rand -hex 32
JWT_SECRET=change-me-generate-with-openssl-rand-hex-32
JWT_REFRESH_SECRET=change-me-different-secret-generate-with-openssl-rand-hex-32

# API
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Google Maps (for geocoding in admin onboarding)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Twilio (SMS notifications — Phase 1)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Resend (email notifications — Phase 1)
RESEND_API_KEY=

# CORS — comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175
